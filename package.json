{
  "name": "@ddedic/expo-fancy-ota-updates",
  "version": "1.2.1",
  "description": "Highly customizable OTA update UI components for Expo apps. Includes animated banners, info screens, and full theming support.",
  "author": "Danijel Dedic <dedic.d@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/ddedic/expo-fancy-ota-updates",
  "repository": {
    "type": "git",
    "url": "https://github.com/ddedic/expo-fancy-ota-updates.git"
  },
  "bugs": {
    "url": "https://github.com/ddedic/expo-fancy-ota-updates/issues"
  },
  "bin": {
    "ota-publish": "./bin/ota-publish.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "bin",
    "src",
    "assets",
    "README.md",
    "CLI.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "expo",
    "ota",
    "updates",
    "react-native",
    "expo-updates",
    "banner",
    "over-the-air",
    "customizable",
    "theming",
    "i18n"
  ],
  "peerDependencies": {
    "expo": ">=54.0.0",
    "expo-device": "*",
    "expo-linear-gradient": "*",
    "expo-updates": "*",
    "lucide-react-native": ">=0.300.0",
    "react": ">=18.0.0",
    "react-native": "*",
    "react-native-reanimated": ">=3.0.0",
    "react-native-safe-area-context": "*",
    "react-native-svg": "*"
  },
  "peerDependenciesMeta": {
    "expo-linear-gradient": {
      "optional": true
    },
    "lucide-react-native": {
      "optional": true
    },
    "react-native-svg": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/prompts": "^2.4.9",
    "@types/react": "~19.1.10",
    "tsup": "^8.5.1",
    "typescript": "~5.7.2",
    "vitepress": "^1.6.4",
    "vue": "^3.5.25"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "cosmiconfig": "^9.0.0",
    "execa": "^9.6.1",
    "ora": "^9.0.0",
    "prompts": "^2.4.2",
    "zod": "^4.1.13"
  }
}
